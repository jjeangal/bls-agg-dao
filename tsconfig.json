{
    "compilerOptions": {
        "target": "es5",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "hardhat.config.ts",
        "scripts/**/*",
        "deploy/**/*",
        "test/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}